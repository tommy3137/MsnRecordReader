@{
    ViewData["Title"] = "MSN Record Converter";
}

<div>
    <input id="files" name="files" type="file" multiple class="btn btn-default" />
    <input id="btnUploadFile" type="submit" class="btn btn-primary" value="上傳" />
    <div id="DivResult">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">日期</th>
                    <th scope="col">時間</th>
                    <th scope="col">暱稱</th>
                    <th scope="col">訊息</th>
                </tr>
            </thead>
            <tbody id="content">

            </tbody>
        </table>
    </div>
</div>





@section Scripts{
    <script type="text/javascript">
    $('#btnUploadFile').on('click', function () {
        var data = new FormData();

        var files = $('#files').get(0).files;
        if (files.length > 0) {
            data.append("files", files[0]);
        }

        var ajaxRequest = $.ajax({
            type: "POST",
            url: "@Url.Action("UploadXls","Upload")",
            contentType: false, 
            processData: false, 
            dataType: "json",
            data: data
        }).done(function (data, textStatus) {
            var htmlresult = "";
            $.each(data, function (i, item) {
                htmlresult += "<tr><th>" + item.date + "</th>" + "<th>" + item.time + "</th>" + "<th>" + item.from + "</th>" + "<th>" + item.text + "</th></tr>";
            });
            $("#content").append(htmlresult);
        }).fail(function () {
                alert("上傳錯誤");
        });
    })


    </script>


}
